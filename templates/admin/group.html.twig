{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>{{ group.name }}</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Remove</th>
                </tr>
            </thead>
            <tbody>
                {% for user in group.users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.name }}</td>
                        <td>
                            <form action="{{ url('admin_groups_remove_user', {groupId: group.id, userId: user.id}) }}" method="post">
                                <input type="submit" value="Remove">
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        {% if usersNotInGroup is not empty %}
            <form action="{{ url('admin_groups_add_user', {id: group.id}) }}" method="post">
                <select name="userId">
                    {% for user in usersNotInGroup %}
                        <option value="{{ user.id }}">{{ user.id }}. {{ user.name }}</option>
                    {% endfor %}
                </select>
                <input type="submit" value="Add to group">
            </form>
        {% endif %}
    </div>
{% endblock %}